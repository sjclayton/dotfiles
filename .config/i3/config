# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Basic definitions
set $term kitty
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Sans 10

# Color settings (gruvbox)

set $bg #282828
set $red #cc241d
set $green #98971a
set $blue #458588
set $yellow #d79921
set $magenta #b16286
set $cyan #689d68
set $white #ebdbb2
set $black #1d2021

# green gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $green $green $black $magenta $green
client.focused_inactive $bg $bg $yellow $magenta $black
client.unfocused        $bg $bg $yellow $magenta $black
client.urgent           $red $red $white $red $red


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec --no-startup-id $term
bindsym $mod+Shift+Return exec --no-startup-id alacritty

# Update search indexes
bindsym $mod+Mod1+Return exec --no-startup-id updatedb -l 0 -o ~/.Archive.db -U /var/run/media/shaun/Archive && updatedb -l 0 -o ~/.home.db -U /home/shaun

# Set focus to not follow mouse cursor
focus_follows_mouse no

# Kill focused window
bindsym $mod+q kill

# # Setup initial workspaces on displays
# workspace "1" output eDP1
# workspace "2" output HDMI1
# workspace "3" output eDP1
# workspace "4" output HDMI1
# workspace "5" output eDP1
# workspace "6" output HDMI1
# workspace "7" output eDP1
# workspace "8" output HDMI1
# workspace "9" output eDP1
# workspace "10" output HDMI1

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Set direction for new window splits
bindsym $mod+Shift+v split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split

# focus last used window (container)
bindsym $mod+d exec --no-startup-id ~/scripts/focus_last.py --switch

# toggle tiling / floating
#bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+x restart
# exit i3 (pass control to xfce session manager)
bindsym $mod+Shift+e exec i3-msg exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Setup gaps
#
gaps inner 10
gaps outer 10
smart_gaps on
smart_borders on
# Allow toggling of gaps on/off
bindsym $mod+g exec --no-startup-id ~/scripts/toggle_gaps

# Startup
exec --no-startup-id compton --config ~/.config/compton.conf -b
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id ckb-next -c -b
exec --no-startup-id udiskie -2 -N
exec_always --no-startup-id ~/scripts/focus_last.py
exec_always --no-startup-id nitrogen --restore && sleep 2
exec_always --no-startup-id ~/scripts/polylaunch.sh
exec_always --no-startup-id ~/scripts/autoname_workspaces.py &
exec --no-startup-id kupfer --no-splash
exec --no-startup-id unclutter -b --exclude-root

# Monitor switch keybinding (reload bars)
bindsym $mod+x exec --no-startup-id ~/scripts/polylaunch.sh

# Application workspace assignments, etc

for_window [class="Spotify"] move to workspace 9

# Application launch key bindings
bindsym $mod+Ctrl+v exec --no-startup-id $term --name "vim" nvim
bindsym $mod+Ctrl+c exec --no-startup-id chromium
bindsym $mod+Ctrl+s exec --no-startup-id spotify
bindsym $mod+Ctrl+i exec --no-startup-id $term --name "glances" glances --disable-bg
bindsym $mod+Shift+d --release exec ~/scripts/dunstreload.sh
bindsym $mod+e exec --no-startup-id $term --name "ranger" ranger
bindsym XF86MyComputer exec --no-startup-id $term --name "ranger" ranger
bindsym XF86Tools exec --no-startup-id $term --name "vim" nvim ~/.config/i3/config

## Screen brightness
bindsym XF86MonBrightnessUp exec xbacklight + 5
bindsym XF86MonBrightnessDown exec xbacklight - 5

## Turn off screens
bindsym $mod+Mod1+Delete exec --no-startup-id ~/scripts/screenoff.sh

## Audio controls
# player controls
bindsym $mod+backslash exec playerctl play-pause
bindsym $mod+bracketright exec playerctl next
bindsym $mod+bracketleft exec playerctl previous

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle

bindsym $mod+equal exec amixer -q -D pulse sset Master 5%+
bindsym $mod+minus exec amixer -q -D pulse sset Master 5%-
bindsym $mod+Shift+backslash exec amixer -q -D pulse sset Master toggle

# Border settings
hide_edge_borders smart_no_gaps
default_border pixel 2

## Window rules
#
