# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Basic variable definitions
set $term kitty
set $mod Mod4
set $exec exec --no-startup-id
set $exec_a exec_always --no-startup-id

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Sans 10

# Color settings (gruvbox)

set $bg #282828
set $red #cc241d
set $green #98971a
set $blue #458588
set $yellow #d79921
set $magenta #b16286
set $cyan #689d68
set $white #ebdbb2
set $black #1d2021

# green gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $green $green $black $magenta $green
client.focused_inactive $bg $bg $yellow $magenta $black
client.unfocused        $bg $bg $yellow $magenta $black
client.urgent           $red $red $white $red $red


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return $exec $term
bindsym $mod+Shift+Return $exec alacritty

# Update search indexes
bindsym $mod+Mod1+Return $exec updatedb -l 0 -o ~/.Archive.db -U /var/run/media/shaun/Archive && updatedb -l 0 -o ~/.home.db -U /home/shaun

# Set focus to not follow mouse cursor
focus_follows_mouse no

# Kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Set direction for new window splits
bindsym $mod+Shift+v split v; $exec dunstify -r 99 "Vertical split"
bindsym $mod+v split h; $exec dunstify -r 99 "Horizontal split"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (tabbed, toggle split)
bindsym $mod+t layout tabbed; $exec dunstify -r 98 "Tabbed mode"
bindsym $mod+s layout toggle split; $exec dunstify -r 99 "Toggle split direction"

# focus last used window (container)
bindsym $mod+d $exec ~/scripts/focus_last.py --switch

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+c focus child

# switch to next/previous workspace
bindsym $mod+Left workspace prev
bindsym $mod+Right workspace next

# switch to next/previous workspace on monitor
bindsym $mod+Shift+Left workspace prev_on_output
bindsym $mod+Shift+Right workspace next_on_output

# move workspace to next/previous monitor
bindsym $mod+Mod1+Left move workspace to output left
bindsym $mod+Mod1+Right move workspace to output right

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+x restart
# exit i3 (pass control to xfce session manager)
bindsym $mod+Shift+e $exec i3-msg exit

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Setup gaps
#
gaps inner 10
gaps outer 10
smart_gaps on
smart_borders on
# Allow toggling of gaps on/off
bindsym $mod+g $exec ~/scripts/toggle_gaps

# Startup
$exec compton --config ~/.config/compton.conf -b
$exec nm-applet
$exec dunst
$exec ckb-next -c -b
$exec udiskie -2 -N
$exec_a ~/scripts/focus_last.py
$exec_a nitrogen --restore && sleep 2
$exec_a ~/scripts/polylaunch.sh
$exec_a ~/scripts/autoname_workspaces.py &
$exec kupfer --no-splash
$exec unclutter -b --exclude-root
$exec $term --name "dropdown"

# Monitor switch keybinding (reload bars)
bindsym $mod+x $exec ~/scripts/polylaunch.sh

## Window rules
# General
for_window [class="Kupfer.py" instance="kupfer.py"] floating enable
for_window [class="Nm-connection-editor" instance="nm-connection-editor"] floating enable
for_window [title="Task Manager - Chromium"] floating enable, move position center
for_window [class="Spotify"] move to workspace 10
# Dropdown Terminal
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set width 960 px height 540 px
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 3
for_window [instance="dropdown"] sticky enable

# Application launch key bindings
bindsym $mod+Ctrl+c $exec chromium
bindsym $mod+Ctrl+i $exec $term --name "glances" glances --disable-bg
bindsym $mod+Ctrl+n $exec $term --name "sncli" sncli
bindsym $mod+Ctrl+r $exec $term --name "rtv" rtv
bindsym $mod+Ctrl+s $exec spotify
bindsym $mod+Ctrl+v $exec $term --name "vim" nvim
bindsym $mod+Mod1+d --release $exec ~/scripts/dunstreload.sh
bindsym $mod+Mod1+l $exec ~/scripts/i3-layout-manager/layout_manager.sh
bindsym $mod+question $exec ~/scripts/rofimoji
bindsym $mod+u [instance="dropdown"] scratchpad show, move position center
bindsym $mod+e $exec $term --name "ranger" ranger
bindsym XF86MyComputer $exec $term --name "ranger" ranger
bindsym XF86Tools $exec $term --name "vim" nvim ~/.config/i3/config

## Screen brightness
bindsym XF86MonBrightnessUp $exec xbacklight + 5
bindsym XF86MonBrightnessDown $exec xbacklight - 5

## Turn off screens
bindsym $mod+Mod1+Delete $exec ~/scripts/screenoff.sh

## Audio controls
# player controls
bindsym $mod+backslash $exec playerctl play-pause
bindsym $mod+bracketright $exec playerctl next
bindsym $mod+bracketleft $exec playerctl previous

bindsym XF86AudioPlay $exec playerctl play-pause
bindsym XF86AudioStop $exec playerctl stop
bindsym XF86AudioNext $exec playerctl next
bindsym XF86AudioPrev $exec playerctl previous

# change volume or toggle mute
bindsym XF86AudioRaiseVolume $exec amixer -q -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume $exec amixer -q -D pulse sset Master 5%-
bindsym XF86AudioMute $exec amixer -q -D pulse sset Master toggle

bindsym $mod+equal $exec amixer -q -D pulse sset Master 5%+
bindsym $mod+minus $exec amixer -q -D pulse sset Master 5%-
bindsym $mod+Shift+backslash $exec amixer -q -D pulse sset Master toggle

# Border settings
hide_edge_borders smart_no_gaps
default_border pixel 2
