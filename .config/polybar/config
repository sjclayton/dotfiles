[module/pulseaudio]
type = internal/pulseaudio
sink = sink = alsa_output.pci-0000_00_1b.0.analog-stereo

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = ÔÄ¶ muted
label-muted-foreground = #66

; Only applies if <ramp-volume> is used
ramp-volume-0 = ÔÄß
ramp-volume-1 = ÔÄ®
;ramp-volume-2 = üîá

